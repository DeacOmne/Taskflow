generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  passwordHash  String?
  timezone      String    @default("America/Los_Angeles")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  projects      Project[]
  tasks         Task[]
  emailSchedules EmailSchedule[]
  emailLogs     EmailLog[]

  @@map("users")
}

model Project {
  id          String    @id @default(cuid())
  userId      String
  name        String
  description String?
  archived    Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks       Task[]

  @@map("projects")
}

model Task {
  id          String      @id @default(cuid())
  userId      String
  projectId   String
  title       String
  description String?
  status      TaskStatus  @default(BACKLOG)
  priority    Priority    @default(P2)
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  project     Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("tasks")
}

model EmailSchedule {
  id                 String    @id @default(cuid())
  userId             String
  enabled            Boolean   @default(true)
  cadence            Cadence   @default(DAILY)
  dayOfWeek          Int?      // 0=Sunday, 6=Saturday (only for WEEKLY)
  timeOfDay          String    @default("08:00") // HH:MM in user's timezone
  timezone           String    @default("America/Los_Angeles")
  includeProjectIds  Json      @default("[]") // empty = all non-archived
  outstandingStatuses Json     @default("[\"BACKLOG\",\"IN_PROGRESS\",\"BLOCKED\"]")
  lastSentAt         DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  user               User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("email_schedules")
}

model EmailLog {
  id        String   @id @default(cuid())
  userId    String
  toEmail   String
  subject   String
  bodyHtml  String
  bodyText  String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("email_logs")
}

enum TaskStatus {
  BACKLOG
  IN_PROGRESS
  BLOCKED
  DONE
}

enum Priority {
  P0
  P1
  P2
  P3
}

enum Cadence {
  DAILY
  WEEKLY
}
